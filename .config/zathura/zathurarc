set synctex true
# set synctex-editor-command "svim -G +%{line} %{input}"
set synctex-editor-command "nvim -G +%{line} %{input}"

set window-title-basename "true"
set window-title-page "true"
set selection-clipboard clipboard

set completion-highlight-bg "#61AFEF"
set inputbar-bg "#222222"
set inputbar-fg "#EEEEEE"
set statusbar-bg "#222222"
set statusbar-fg "#EEEEEE"
set highlight-color "#FF8080"

set font "mononoki Nerd Font 14"

set adjust-open "best-fit"

set recolor "true"
set recolor-lightcolor "#222222" #00
set recolor-darkcolor "#EEEEEE" #06
set recolor-reverse-video "false"
#  set recolor-keephue "true"

set guioptions "v"

map u scroll half-up
map d scroll half-down
map p print
map i recolor
map <Space> toggle_statusbar
